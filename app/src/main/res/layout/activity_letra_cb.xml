<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laris.myapplication.LetraCB">

    <Button
        android:id="@+id/botaoletraCB"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Cole Aqui"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:onClick="letraCB"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:text="VocÃª deve estar com a letra copiada anteriormente!"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TextoCopiado"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/botaoletraCB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="18dp"
        android:text=""/>

    <ImageView
        android:id="@+id/infoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextoCopiado"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:clickable="true"/>

    <Button
        android:id="@+id/botaCerteza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextoCopiado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:elevation="0dp"
        android:text="Letra Finalizada"
        android:visibility="invisible" />


</RelativeLayout>
